<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BCFBD"
    tools:context=".SetCurrentLocationFragment">

    <ImageView
        android:id="@+id/ivMapLocation"
        android:layout_width="572dp"
        android:layout_height="494dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/you_are_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYouAreHere" />

    <TextView
        android:id="@+id/tvYouAreHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cambay"
        android:letterSpacing=".18"
        android:text="@string/tvYouAreHere"
        android:textColor="#383F3D"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetLocation"
        android:layout_width="209dp"
        android:layout_height="77dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F9B4AB"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/btnSetLocation"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMapLocation" />
</androidx.constraintlayout.widget.ConstraintLayout>